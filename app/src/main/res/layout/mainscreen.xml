<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/silver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/reenie_beanie"
                android:gravity="center"
                android:text="What do you want to do?"
                android:textColor="@color/black"
                android:textSize="35dp" />




            <LinearLayout
                android:id="@+id/HotelsSection"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="100dp"
                    app:cardMaxElevation="50dp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="175dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/hotel" />

                    <Button
                        android:id="@+id/checkhotelsbutton"
                        android:layout_width="199dp"
                        android:layout_height="90dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/reenie_beanie"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="CheckHotels"
                        android:textColor="@color/white"
                        android:textSize="44dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ActitiviesSection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView

                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="261dp"
                    android:layout_height="100dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="@color/white">

                    <Button
                        android:id="@+id/actvivitiesbutton"
                        android:layout_width="236dp"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/reenie_beanie"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="CheckActivities"
                        android:textColor="@color/white"
                        android:textSize="44dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/RestaurantsSection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:id="@+id/RestaurantsLogo"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="261dp"
                    android:layout_height="100dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="@color/white">

                    <Button
                        android:id="@+id/restaurantsbutton"
                        android:layout_width="236dp"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/black"
                        android:fontFamily="@font/reenie_beanie"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="CheckRestaurants"
                        android:textColor="@color/white"
                        android:textSize="35dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/TripsSection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:id="@+id/Checktripsimage"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="261dp"
                    android:layout_height="100dp"
                    android:elevation="30dp"
                    app:cardBackgroundColor="@color/white">

                    <Button
                        android:id="@+id/checktripsbutton"
                        android:layout_width="236dp"
                        android:layout_height="104dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/reenie_beanie"
                        android:gravity="center"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:text="What'sNearby"
                        android:textColor="@color/white"
                        android:textSize="44dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>